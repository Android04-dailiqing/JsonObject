<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.weather.ShowWeatherActivity">

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:id="@+id/tv_time"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="170dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白天天气状况"
        android:textSize="15sp"
        android:id="@+id/tv_tianqi"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白天温度"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_wendu"
        android:layout_below="@+id/tv_tianqi"
        android:layout_alignLeft="@+id/tv_tianqi"
        android:layout_alignStart="@+id/tv_tianqi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白天风向"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_fengxiang"
        android:layout_below="@+id/tv_wendu"
        android:layout_alignLeft="@+id/tv_wendu"
        android:layout_alignStart="@+id/tv_wendu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白天风力"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_fengli"
        android:layout_below="@+id/tv_fengxiang"
        android:layout_alignLeft="@+id/tv_fengxiang"
        android:layout_alignStart="@+id/tv_fengxiang"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜晚天气状况"
        android:textSize="15sp"
        android:id="@+id/tv_night_tianqi"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜晚温度"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_night_wendu"
        android:layout_below="@+id/tv_night_tianqi"
        android:layout_alignLeft="@+id/tv_night_tianqi"
        android:layout_alignStart="@+id/tv_night_tianqi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜晚风向"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_night_fengxiang"
        android:layout_below="@+id/tv_night_wendu"
        android:layout_alignLeft="@+id/tv_night_wendu"
        android:layout_alignStart="@+id/tv_night_wendu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜晚风力"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_night_fengli"
        android:layout_below="@+id/tv_night_fengxiang"
        android:layout_alignLeft="@+id/tv_night_fengxiang"
        android:layout_alignStart="@+id/tv_night_fengxiang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="农历"
        android:textSize="20dp"
        android:id="@+id/tv_nongli"
        android:layout_alignTop="@+id/tv_xingqi"
        android:layout_alignLeft="@+id/tv_diqu"
        android:layout_alignStart="@+id/tv_diqu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星期几"
        android:textSize="20dp"
        android:id="@+id/tv_xingqi"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tv_time"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/iv_day"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地区"
        android:textSize="20dp"
        android:id="@+id/tv_diqu"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/iv_night"
        android:layout_below="@+id/tv_night_tianqi"
        android:layout_alignLeft="@+id/iv_day"
        android:layout_alignStart="@+id/iv_day"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白天详情"
        android:textSize="20sp"
        android:layout_below="@+id/tv_xingqi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜间详情"
        android:textSize="20sp"
        android:layout_below="@+id/iv_day"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="15sp"
        android:id="@+id/tv_date"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白天天气情况"
        android:textSize="15sp"
        android:id="@+id/tv_dayinfo"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_date"
        android:layout_alignLeft="@+id/tv_date"
        android:layout_alignStart="@+id/tv_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白天最高温度"
        android:textSize="15sp"
        android:id="@+id/tv_daymax"
        android:layout_below="@+id/tv_dayinfo"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/tv_dayinfo"
        android:layout_alignStart="@+id/tv_dayinfo"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/iv_show"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:layout_alignTop="@+id/tv_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>




</RelativeLayout>
